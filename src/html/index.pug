doctype html
html(lang="en", translate="no")
  head
    block head-start

    block head
      title='Silex'
      meta(name='description', content='This is a public instance of Silex website builder. Build websites in the browser')
      link(rel="shortcut icon", href="assets/favicon.png")

    block loading
      style.
        body {
          background-color: #444444;
          font-family: Helvetica,sans-serif;
        }
        .silex-loader {
          display: none;
        }

    block head-end

  body.silex-loading
    .silex-loader.silex-dialog.
      Loading...

    block includes
      include ./templates/includes.pug

    block body-start
      include ./templates/workspace.pug

    block body-end
      script(src='js/main.js')

    block silex-start
      // Here you can use silex.config to hook into silex options before silex starts
      script.
        window.silex.start()
