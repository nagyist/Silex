{
  "name": "silex-website-builder",
  "description": "Free and easy website builder for everyone.",
  "version": "3.0.0",
  "version:backwardcompat": "3.0.0",
  "author": {
    "name": "Alex Hoyau",
    "url": "https://lexoyo.me/"
  },
  "main": "dist/server/index.js",
  "bin": {
    "silex": "./dist/server/index.js"
  },
  "license": "(GPL-3.0 OR MPL-2.0)",
  "engines": {
    "node": ">=10.15.3 <=12.22.10"
  },
  "watch": {
    "build:css:debug": {
      "patterns": [
        "src/css/"
      ],
      "extensions": "scss"
    },
    "build:html:debug": {
      "patterns": [
        "src/html/"
      ],
      "extensions": "pug"
    },
    "build:client:debug": {
      "patterns": [
        "src/ts/client/"
      ],
      "extensions": "ts"
    },
    "build:server:debug": {
      "patterns": [
        "src/ts/server/"
      ],
      "extensions": "ts"
    }
  },
  "scripts": {
    "release": "",
    "watch": "npm-watch",
    "start": "node dist/server/index.js",
    "start:debug": "cross-env SILEX_DEBUG=true nodemon dist/server/index.js",
    "prepublishOnly": "npm run lint:fix && npm run build",
    "prepare": "npm run build",
    "build": "run-s build:css:release build:html build:client:release build:server:release",
    "webpack": "webpack --config webpack.config.js",
    "build:css:release": "sass â€“no-source-map src/css/index.scss dist/client/css/admin.css",
    "build:css:debug": "sass src/css/index.scss dist/client/css/admin.css",
    "build:html": "pug src/html/index.pug --out dist/client/ --no-debug",
    "build:html:debug": "pug src/html/debug.pug --pretty --out dist/client/ && mv dist/client/debug.html dist/client/index.html",
    "build:client:release": "webpack --config webpack.config.js",
    "build:client:debug": "webpack --config webpack.debug.config.js",
    "build:server:release": "tsc -p tsconfig-server-release.json",
    "build:server:debug": "tsc -p tsconfig-server-debug.json",
    "lint": "tslint -c tslint.json 'src/ts/**/*.ts'",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "adm-zip": "^0.5.9",
    "body-parser": "1.19.2",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "cookie-session": "2.0.0",
    "cross-env": "7.0.3",
    "express": "4.17.3",
    "express-force-ssl": "0.3.2",
    "grapesjs": "^0.18.4",
    "grapesjs-blocks-basic": "^0.1.8",
    "grapesjs-plugin-forms": "^2.0.1",
    "grapesjs-plugin-header": "^0.1.54",
    "jsdom": "19.0.0",
    "lit-html": "^2.2.2",
    "mkdirp": "^1.0.4",
    "node_modules-path": "*",
    "normalize.css": "8.0.1",
    "object-path": "0.11.8",
    "promise-sequential": "1.1.1",
    "request": "2.88.2",
    "sass": "^1.49.11",
    "serve-static": "1.15.0",
    "silex-blank-templates": "^1.6.8",
    "silex-templates": "^1.0.12",
    "source-map-support": "0.5.21"
  },
  "devDependencies": {
    "@types/express": "4.17.13",
    "@types/express-session": "1.17.4",
    "@types/jest": "27.4.1",
    "@types/jquery": "^3.5.14",
    "@types/jsdom": "16.2.14",
    "@types/node": "17.0.23",
    "babel-jest": "27.5.1",
    "css-loader": "6.7.1",
    "eslint": "8.12.0",
    "file-loader": "6.2.0",
    "jest": "27.5.1",
    "nodemon": "2.0.15",
    "npm-run-all": "^4.1.5",
    "npm-watch": "0.11.0",
    "pug-cli": "1.0.0-alpha6",
    "style-loader": "3.3.1",
    "ts-jest": "27.1.4",
    "ts-loader": "9.2.8",
    "tslint": "6.1.3",
    "typescript": "4.6.3",
    "webpack": "5.71.0",
    "webpack-cli": "4.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/silexlabs/Silex.git"
  },
  "keywords": [
