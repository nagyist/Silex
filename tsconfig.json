{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist/client/",
    "target": "ES2019",
    "watch": true,
    "sourceMap": true,
    "module": "esnext",
    "removeComments": false,
    "allowJs": true,
    "typeRoots": [
      "src/ts/types",
      "node_modules/@types"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/ts/client/index.ts"
  ],
  "plugins": [
    {
      "name": "ts-lit-plugin",
      "strict": true
    }
  ]
}
